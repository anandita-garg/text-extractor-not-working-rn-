{
  "name": "Time To Get Some Text!",
  "version": "0.0.1",
  "manifest_version": 3,
  "description": "Extracts text from a webpage and displays it in the extension popup.",
  "permissions": ["activeTab"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
